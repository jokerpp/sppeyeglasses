<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <include
        android:id="@+id/top_titlebar"
        layout="@layout/common_titlebar" />
    <RelativeLayout
        android:id="@+id/phone_container_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_titlebar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/phone_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_user" />

        <EditText
            android:id="@+id/phone_Et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/phone_left_iv"
            android:layout_centerVertical="true"
            android:background="@null"
            android:digits="0123456789"
            android:hint="昵称"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_register_gray">

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pwd_container_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phone_container_rl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/pwd_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_password" />

        <EditText
            android:id="@+id/code_Et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/pwd_left_iv"
            android:background="@null"
            android:hint="密码"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_register_gray">

        </View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pwd_confirm_container_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pwd_container_rl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/pwd_confirm_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_password" />

        <EditText
            android:id="@+id/pwd_confirm_Et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/pwd_confirm_left_iv"
            android:background="@null"
            android:hint="确认密码"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_register_gray">

        </View>
    </RelativeLayout>

    <TextView
        android:id="@+id/register_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_blue_bg"
        android:layout_below="@id/pwd_confirm_container_rl"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="@color/white"/>

</RelativeLayout>
