<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <ImageView
        android:id="@+id/top_logo_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/logo_96" />

    <RelativeLayout
        android:id="@+id/phone_container_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_logo_iv"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="87dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/phone_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_phone" />

        <EditText
            android:id="@+id/phone_Et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/phone_left_iv"
            android:background="@null"
            android:digits="0123456789"
            android:hint="手机号码"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_register_gray">

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pwd_container_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phone_container_rl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp">
        <TextView
            android:id="@+id/get_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <View
            android:id="@+id/divider_vertical"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/get_code_tv"
            android:background="@color/login_register_gray"/>


        <ImageView
            android:id="@+id/pwd_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_verification" />

        <EditText
            android:id="@+id/code_Et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/pwd_left_iv"
            android:layout_toLeftOf="@id/divider_vertical"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:digits="0123456789"
            android:hint="输入验证码"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_register_gray">

        </View>
    </RelativeLayout>

    <TextView
        android:id="@+id/register_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_blue_bg"
        android:layout_below="@id/pwd_container_rl"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/pwd_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/register_bt"
        android:text="密码登录"
        android:textColor="@color/black"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/register_bt"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="#999999"
        android:textSize="13sp"/>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_qq"/>
        <ImageView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_wechat"/>
    </RelativeLayout>

</RelativeLayout>
