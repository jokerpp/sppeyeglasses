<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/titlebar_container"
        layout="@layout/common_titlebar"/>

    <RelativeLayout
        android:id="@+id/aboutus_top_container"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/aboutus_offical_account_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/wechat_focus"/>
        <TextView
            android:id="@+id/aboutus_offical_account_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutus_offical_account_iv"
            android:textSize="@dimen/sp_setting_common_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:text="微信公众号:见声科技"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:layout_below="@id/aboutus_top_container"
        android:background="@color/gray_light">

    </View>
    <RelativeLayout
        android:id="@+id/agreement_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_common_height"
        android:layout_below="@id/divider1">
        <TextView
            android:id="@+id/agreement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_setting_common_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:text="用户使用协议"/>
        <ImageView
            android:id="@+id/update_app_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_more"/>

    </RelativeLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/agreement_rl"
        android:background="@color/gray_light">

    </View>
    <RelativeLayout
        android:id="@+id/policy_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_common_height"
        android:layout_below="@id/divider2">
        <TextView
            android:id="@+id/policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_setting_common_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:text="关于我们"/>
        <ImageView
            android:id="@+id/policy_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_more"/>

    </RelativeLayout>
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/policy_rl"
        android:background="@color/gray_light">

    </View>
    <TextView
        android:id="@+id/bottom_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_setting_common_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textColor="@color/black"
        android:text="见声看见 · 我看故我听"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/bottom_des_tv"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_96"/>

</RelativeLayout>
